{
  "name": "@nuxt-themes/typography",
  "version": "0.9.1",
  "description": "A beautiful typography with a set of prose components to use with Nuxt Content.",
  "keywords": [
    "nuxt",
    "nuxt-content",
    "nuxt-theme"
  ],
  "type": "module",
  "exports": {
    ".": "./nuxt.config.ts",
    "./app.config": "./app.config.ts",
    "./tokens.config": "./tokens.config.ts",
    "./css": "./main.css"
  },
  "files": [
    "components",
    "app.config.ts",
    "nuxt.config.ts",
    "nuxt.schema.ts",
    "tokens.config.ts",
    "main.css"
  ],
  "scripts": {
    "dev": "nuxt dev .demo",
    "build": "nuxi build .demo",
    "prepare": "nuxi prepare .demo",
    "generate": "nuxi generate .demo",
    "preview": "nuxi preview .demo",
    "lint": "eslint --ext .ts,.js,.vue .",
    "prepublishOnly": "pnpm lint",
    "release": "release-it"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.2.0",
    "nuxt-config-schema": "^0.4.5",
    "nuxt-icon": "^0.3.2",
    "pinceau": "^0.18.1",
    "ufo": "^1.1.1"
  },
  "devDependencies": {
    "@nuxt-themes/tokens": "^1.9.0",
    "@nuxt/content": "2.4.3",
    "@nuxt/devtools": "^0.2.4",
    "@nuxthq/studio": "^0.7.7",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.35.0",
    "nuxt": "3.2.3",
    "nuxt-plausible": "^0.1.2",
    "release-it": "^15.6.1",
    "typescript": "^4.9.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss",
        "vue"
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
